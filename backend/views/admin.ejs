<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/public/css/admin.css"> 

  
  <title>Admin Panel</title>
</head>
<body>
  <h1>Admin Panel</h1>

  <!-- Form for adding a new product -->
  <form action="/api/products" method="POST" class="admin-form">
    <label for="name">Product Name:</label>
    <input type="text" id="name" name="name" required><br>

    <label for="description">Product Description:</label>
    <textarea id="description" name="description" required></textarea><br>

    <label for="size">Product Size:</label>
    <input type="text" id="size" name="size" required><br>

    <label for="price">Product Price:</label>
    <input type="number" id="price" name="price" required><br>

    <label for="category">Product Category:</label>
    <input type="text" id="category" name="category" required><br>

    <label for="rating">Product Rating:</label>
    <input type="number" id="rating" name="rating" step="0.1" min="0" max="5" value="4.9"><br><br>

    <!-- Color input fields (repeat as needed) -->
    <label for="colorName1">Color Name 1:</label>
    <input type="text" id="colorName1" name="colors[0][colorName]" required><br>

    <label for="colorCode1">Color Code 1:</label>
    <input type="text" id="colorCode1" name="colors[0][colorCode]" required><br>

    <label for="imagePath1">Image Path 1:</label>
    <input type="text" id="imagePath1" name="colors[0][imagePath]" required><br> <br>
    <label for="colorName1">Color Name 2:</label>
    <input type="text" id="colorName1" name="colors[0][colorName]" required><br>

    <label for="colorCode1">Color Code 2:</label>
    <input type="text" id="colorCode1" name="colors[0][colorCode]" required><br>

    <label for="imagePath1">Image Path 2:</label>
    <input type="text" id="imagePath1" name="colors[0][imagePath]" required><br>

    <!-- Add more color input fields as needed -->

    <button type="submit">Add Product</button>
  </form>

  <!-- List of products -->
  <h2>Product List</h2>
  <ul>
    <% products.forEach(product => { %>
      <li><%= product.name %></li>
    <% }); %>
  </ul>
</body>
</html>
